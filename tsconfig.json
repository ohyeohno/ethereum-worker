{
  "compilerOptions": {
    "outDir": "./worker",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "./src/*.ts",
    "./test/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./node_modules/@cloudflare/workers-types/index.d.ts",
    "./node_modules/types-cloudflare-worker/global.d.ts"
  ],
  "exclude": ["node_modules/", "worker/"]
}
